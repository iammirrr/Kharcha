<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/custom_white_gradent"
    android:orientation="horizontal"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWalletName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-5dp"
            android:fontFamily="@font/inria_sans_r"
            android:text="School Fee"
            android:textColor="#FF6C4FD9"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/tvWalletAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inria_sans"
            android:text="1000000"
            android:textColor="#FF6C4FD9"
            android:textSize="32sp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_delete2_rv">

        </ImageView>

        <ImageView
            android:id="@+id/btnSelected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_tick_rv">

        </ImageView>


    </LinearLayout>

</LinearLayout>