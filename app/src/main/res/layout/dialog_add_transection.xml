<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/etTransection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_purple_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_weight="0.1"
            android:src="@drawable/icon_close_dialog">

        </ImageView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/inria_sans"
            android:gravity="center"
            android:text="Add New Transaction"
            android:textColor="#765496"
            android:textSize="25sp"></TextView>
    </LinearLayout>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etTransactionAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inria_sans"
        android:gravity="center"
        android:hint="0.000 $"
        android:textColor="@color/white"
        android:textColorHint="#9C73C1"
        android:inputType="numberDecimal"
        android:textSize="60sp"></com.google.android.material.textfield.TextInputEditText>

    <RadioGroup
        android:id="@+id/radioButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <RadioButton
            android:id="@+id/btnExpense"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_radio"
            android:button="?attr/selectableItemBackgroundBorderless"
            android:buttonTint="#FFFFFF"
            android:checked="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Expense"
            android:textColor="@color/white">

        </RadioButton>

        <RadioButton
            android:id="@+id/btnIncome"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_radio"
            android:button="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="Income"
            android:textColor="@color/white">

        </RadioButton>
    </RadioGroup>


    <TextView

        android:id="@+id/tvWalletName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_white_gradent"
        android:drawableLeft="@drawable/icon_wallet_et"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:fontFamily="@font/inria_sans"
        android:hint="Wallet"
        android:padding="20dp"
        android:textSize="20sp"
        android:textColor="#6C4FD9"
        android:textColorHint="#C1B0FF"></TextView>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_white_gradent"
        android:drawableLeft="@drawable/icon_birefcase_et2"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inria_sans"
        android:hint="Category"
        android:padding="20dp"
        android:textColor="#6C4FD9"
        android:textColorHint="#C1B0FF"></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/custom_white_gradent"
        android:drawableLeft="@drawable/icon_note_et"
        android:drawablePadding="10dp"
        android:fontFamily="@font/inria_sans"
        android:hint="Note"
        android:padding="20dp"
        android:textColor="#6C4FD9"
        android:textColorHint="#C1B0FF"></com.google.android.material.textfield.TextInputEditText>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:src="@drawable/btn_add">
        </ImageView>
    </RelativeLayout>

</LinearLayout>